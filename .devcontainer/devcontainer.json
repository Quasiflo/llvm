{
  "name": "opencode",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/mise:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hverlin.mise-vscode",
        "mads-hartmann.bash-ide-vscode",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-australian-english",
        "tamasfe.even-better-toml",
        "sst-dev.opencode"
      ]
    }
  },
  "mounts": [
    {
      "source": "mise-data-volume-arm64",
      "target": "/mnt/mise-data",
      "type": "volume"
    },
    {
      "source": "opencode-data-volume-arm64",
      "target": "/home/vscode/.local/share/opencode",
      "type": "volume"
    }
  ],
  "containerEnv": {
    "MISE_DATA_DIR": "/mnt/mise-data"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/mnt/mise-data/shims"
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /mnt/mise-data /home/vscode/.local; echo 'eval \"$(mise activate zsh)\"' >> ~/.zshrc; mise settings experimental=true"
}